{
  "name": "serverx-ts",
  "version": "0.0.37",
  "description": "Experimental Node.js HTTP framework using RxJS, built with TypeScript and optimized for serverless deployments",
  "license": "MIT",
  "author": "Mark Florence",
  "main": "./dist/index.js",
  "engines": {
    "node": ">= 8.10"
  },
  "scripts": {
    "build": "npm run lint && npm run test && rimraf dist && tsc",
    "clean:deps": "rm -rf node_modules && rm -f package-lock.json && npm install",
    "compile": "npm run lint && rimraf dist && tsc",
    "deploy:npm": "./bin/deploy-npm.sh",
    "file-server": "rimraf dist && tsc && node dist/examples/file-server.js",
    "http-server": "rimraf dist && tsc && node dist/examples/http-server.js",
    "lint": "eslint ./src/**/*.ts",
    "postinstall": "rimraf node_modules/@types/mime",
    "prettier": "prettier --write .",
    "test": "jest --runInBand --coverage && make-coverage-badge && mv ./coverage/badge.svg ./coverage.svg",
    "test:only": "jest --coverage=false -- %1",
    "toc": "markdown-toc -i README.md"
  },
  "dependencies": {
    "@types/aws-lambda": "^8",
    "@types/express": "^4",
    "@types/md5-file": "^5.0.0",
    "chalk": "^4",
    "file-type": "^10",
    "injection-js": "^2",
    "js-yaml": "^4",
    "md5-file": "^5.0.0",
    "mime": "^2",
    "openapi3-ts": "^2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7",
    "table": "^6"
  },
  "devDependencies": {
    "@types/jest": "^27",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "axios": "^0.21.1",
    "eslint": "^7",
    "eslint-config-mflorence99": "^1",
    "eslint-config-prettier": "^8",
    "eslint-plugin-import": "^2",
    "eslint-plugin-import-splitnsort": "^1",
    "eslint-plugin-jsdoc": "^36",
    "eslint-plugin-prefer-arrow": "^1",
    "jest": "^27",
    "lambda-local": "^2",
    "make-coverage-badge": "^1",
    "markdown-toc": "^1",
    "prettier": "^2",
    "prettier-plugin-package": "^1",
    "rimraf": "^3",
    "string-to-stream": "^1",
    "ts-jest": "^27",
    "ts-node": "^10",
    "typescript": "^4"
  }
}
